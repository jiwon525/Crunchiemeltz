{% assign vid = request.params.vid %}
{% section 'video-data' %}

{% if vid %}
  {% for block in section.blocks %}
    {% if block.id == vid %}
      <div class="video-page">
        <iframe width="100%" height="600" src="{{ block.settings.video_url }}" frameborder="0" allowfullscreen></iframe>
      </div>
    {% endif %}
  {% endfor %}
{% else %}
  <p style="text-align:center; font-size:18px; margin: 50px 0;">
    No video selected. Please go back to the <a href="{{ routes.root_url }}">homepage</a>.
  </p>
{% endif %}

<style>
.video-page {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40px 0;
}
.video-page iframe {
  max-width: 1000px;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.2);
}
</style>
