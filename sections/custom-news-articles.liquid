{{ 'section-main-article-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  <h1 class="news-header">News</h1>

  <div class="news-articles">
    <div class="card-wrapper">
      <a
        href="https://vulcanpost.com/newswire/?rkey=20250313AE39325&filter=25525"
        target="_blank"
        class="full-unstyled-link"
      >
        <div class="image-wrapper">
          <img
            src="https://cdn.shopify.com/s/files/1/0624/4938/5514/files/logo9.png?v=1743261762"
            alt="Vulcan Post"
            width="600"
            height="400"
          >
        </div>
        <h3>Crunchie Meltz Champions Women Leaders at Her Courage Leaders Summit 2025</h3>
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom News Articles",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Article page"
    }
  ]
}
{% endschema %}
