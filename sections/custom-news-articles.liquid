{{ 'section-main-article-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  <h1 class="news-header scroll-trigger animate--fade-in">
    {{ page.title | escape }}
  </h1>

  <div class="news-articles">
    <div class="card-wrapper scroll-trigger animate--slide-in" data-cascade style="--animation-order: 1;">
      <a
        href="https://sg.finance.yahoo.com/news/crunchie-meltz-champions-women-leaders-013000250.html"
        target="_blank"
        class="full-unstyled-link"
      >
        <div class="image-wrapper">
          <img
            src="https://cdn.shopify.com/s/files/1/0624/4938/5514/files/logo6.png?v=1743354496"
            alt="Yahoo News"
            width="300"
            height="200"
          >
        </div>
        <h4>Crunchie Meltz Champions Women Leaders at Her Courage Leaders Summit 2025</h4>
      </a>

      <a
        href= "https://singaporebizjournal.com/crunchie-meltz-serving-crowd-favorite-fudgy-brownies-from-a-home-based-bakery-in-singapore/"
        target="_blank"
        class="full-unstyled-link"
      >
        <div class="image-wrapper">
          <img
            src="https://cdn.shopify.com/s/files/1/0624/4938/5514/files/sgBusinessJournal.png?v=1757509457"
            alt="Singapore Business Journal"
            width="150"
            height="100"
          >
        </div>
        <h4>Crunchie Meltz Champions Women Leaders at Her Courage Leaders Summit 2025</h4>
      </a>      
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom News Articles",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Article page"
    }
  ]
}
{% endschema %}
