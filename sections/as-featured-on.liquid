<style>
  .featured-on-section {
    padding: 4rem 0;
  }

  .featured-on-header {
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .featured-logo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 2rem;
    align-items: center;
    justify-items: center;
  }

  .featured-logo-grid img {
    width: 120px;
    height: auto;
    object-fit: contain;
  }
</style>

<section class="page-width featured-on-section">
  <h2 class="featured-on-header scroll-trigger animate--fade-in">{{ section.settings.header_text }}</h2>
  <div class="featured-logo-grid">
    {% for block in section.blocks %}
      {% if block.settings.logo != blank %}
        <div class="featured-logo">
          {%- assign image = block.settings.logo -%}
          <img
            src="{{ image | image_url }}"
            alt="Featured Logo {{ forloop.index }}"
            width="{{ image.width }}"
            height="{{ image.height }}"
            loading="lazy"
          >
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Logos Grid",
  "tag": "section",
  "class": "section",
  "max_blocks": 12,
  "settings": [
    {
      "type": "text",
      "id": "header_text",
      "label": "Section Header",
      "default": "As Featured On:"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Upload logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Logos Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}
