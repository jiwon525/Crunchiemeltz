<div class="video-carousel-new-tab">
  <div class="video-carousel-wrapper">
    {% for block in section.blocks %}
      {% if block.settings.video_url != blank %}
      <a href="/pages/video?url={{ block.settings.video_url | url_encode }}" target="_blank" class="video-thumbnail">
        <video width="300" height="170" controls>
          <source src="{{ block.settings.video_url }}" type="video/mp4">
        </video>
      </a>

      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
.video-carousel-wrapper {
  display: flex;
  gap: 15px;
  overflow-x: auto;
  padding: 10px 0;
  scroll-snap-type: x mandatory;
}
.video-thumbnail {
  flex: 0 0 auto;
  scroll-snap-align: start;
}
.video-thumbnail video {
  border-radius: 8px;
  transition: transform 0.3s ease;
}
.video-thumbnail:hover video {
  transform: scale(1.05);
}
</style>

{% schema %}
{
  "name": "Video Carousel (New Tab)",
  "settings": [],
  "blocks": [
    {
      "type": "video_block",
      "name": "Video",
      "settings": [
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video Carousel (New Tab)"
    }
  ]
}
{% endschema %}
