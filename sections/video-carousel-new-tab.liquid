<div class="video-carousel-new-tab">
  <div class="video-carousel-wrapper">
    {% for block in section.blocks %}
      {% if block.settings.thumbnail %}
        {% assign thumb = block.settings.thumbnail | image_url: width: 400 %}
        <a href="{{ routes.pages_url }}/video?vid={{ block.id }}" target="_blank" class="video-thumbnail">
          <img src="{{ thumb }}" alt="Video thumbnail" width="400" height="225">
        </a>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
.video-carousel-wrapper {
  display: flex;
  gap: 15px;
  overflow-x: auto;
  padding: 10px 0;
  scroll-snap-type: x mandatory;
}
.video-thumbnail {
  flex: 0 0 auto;
  scroll-snap-align: start;
}
.video-thumbnail img {
  width: 250px; 
  height: auto;
  border-radius: 8px;
  transition: transform 0.3s ease;
}
.video-thumbnail:hover img {
  transform: scale(1.05);
}
</style>

{% schema %}
{
  "name": "Video Carousel (New Tab)",
  "settings": [],
  "blocks": [
    {
      "type": "video_block",
      "name": "Video",
      "settings": [
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL"
        },
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Thumbnail"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video Carousel (New Tab)"
    }
  ]
}
{% endschema %}
